<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Create a new listing.</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div  class="mb-3 mt-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="Enter title" class="form-control" name="listing[title]" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a title</div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Enter description"  required></textarea>
             <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload listing image</label>
            <input type="file" class="form-control" name="listing[image]"  >
        </div>
    
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" placeholder="Enter price"  class="form-control" name="listing[price]"  required>
             <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter price</div>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text"  class="form-control"  placeholder="Enter Country" name="listing[country]"  required>
             <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter country</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="Enter location"  class="form-control" name="listing[location]"  required>
             <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter location</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    </div>
</div>

