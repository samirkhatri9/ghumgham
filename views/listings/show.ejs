<% layout("/layouts/boilerplate") %>
<script>const mapToken = "<%= mapToken %>"
const coordinates = <%- JSON.stringify(listing.geometry.coordinates)%>;
const listingLocation = <%- JSON.stringify(listing.location) %>;

</script>

<div class="row">
   <div class="col-8 offset-3  mt-3">

   <h3 ><%=listing.title%></h3>
   </div>

   <div class="card col-6 offset-3 show-card listing-card" >

      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">

      <div class="col-12 mt-3">
         
      </div>
      <div class="card-body  offset-2">
        <p class="card-text "> 
         <h3>Owned by: <i><%=listing.owner.username%></i></h3>
         <h5>Price :  &#8377; <%=Number(listing.price).toLocaleString("en-in")%> </h5>
         <h5>Location : <%=listing.location%></h5>
         <h5>Country : <%=listing.country%></h5>
         <h5>Description : </h5>
         <p><%=listing.description%></p>
        </p>
      </div>
    </div>

    
   </div>
   <!-- /*To hide button if the id of curr user doesnot match with the id of the owner in database.*/ -->
 <%if(currUser && listing.owner._id.equals(currUser._id)){%>
      <div class="btns offset-3">
         <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn mb-3">Edit </a>
        
         <form method="post" action="/listings/<%=listing.id%>/?_method=DELETE">
            <button class="btn btn-dark offset-4 del-btn">Delete</button>
         </form>
      </div>
    <%}%>
    <%if(currUser){%>
      <hr>
   <div class="col-8 offset-3  mt-3 mb-3">
      <h4>Leave a review</h4>
      <form action="/listings/<%= listing._id %>/reviews " novalidate class="needs-validation" method="post" >
         <div class="col-8 offset-3  mt-3 mb-3"></div>
         <label for="rating" class="form-label">Rating</label>
               <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
               </fieldset>
            </div>
         <div class="mb-3 mt-3 offset-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" cols="15" rows="5 " placeholder="Leave a comment" class="form-control" required></textarea>
            <p class="invalid-feedback">Write some comment</p>
         </div>
         <button class="btn btn-outline-dark offset-3 ">Submit</button>
      </form>
   </div>
   <hr>
<%}%>
  
<% if(listing.reviews.length > 0) { %>
   <hr>
   <div class="row  offset-3 mb-3">
        <p><b>All reviews </b></p>
        <% for(review of listing.reviews){%>
           <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                 <h5 class="card-title">@<%= review.author.username%></h5>
                 <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                 <p class="card-text"><%=review.comment%></p>
              </div>
              <form action="/listings/<%= listing._id%>/reviews/<%= review._id%>/?_method=DELETE" method="post" class=" mb-3">
              <%if(currUser && listing.owner._id.equals(currUser._id)){%>
               <button class="btn btn-sm btn-dark">Delete</button>
               <% } %>
               </form>
            </div>
               <%}%>
     </div>
     <hr>
     <% } %>
     <div class="row offset-3">
         <h3>Where y'll be</h3>
         <div id="map">
            
         </div>

     </div>
 <script src="/js/map.js"></script>
     
            
</div>